---
import '../index.css';
import { Header } from '@/components/layout/Header';
import { Footer } from '@/components/layout/Footer';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Fullstack Developer Portfolio - TypeScript Expert specializing in clean architecture and scalable solutions.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background">
    <Header client:load />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>